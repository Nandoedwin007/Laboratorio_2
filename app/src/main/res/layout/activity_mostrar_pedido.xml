<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MostrarPedido">

    <ListView
            android:layout_width="259dp"
            android:layout_height="213dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp" android:id="@+id/ltPedido"/>
    <Button
            android:text="Limpiar Pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLimpiar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/ltPedido" app:layout_constraintEnd_toStartOf="@+id/btnHacer"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.185"/>
    <Button
            android:text="Hacer Pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHacer" android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toTopOf="@+id/btnInicio2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ltPedido" app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="40dp"/>
    <Button
            android:text="Inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnInicio2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="156dp"
            android:layout_marginStart="156dp" android:layout_marginTop="168dp"
            app:layout_constraintTop_toBottomOf="@+id/ltPedido"/>
</android.support.constraint.ConstraintLayout>